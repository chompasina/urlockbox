<h1> Links </h1>
<%= link_to "Logout", logout_path, method: :delete %>

<%= form_for(@link, url: {action: "create"}) do |f| %>
  <%= f.label :title, 'Title' %>
  <%= f.text_field :title %>
  <%= f.label :url, 'URL' %>
  <%= f.text_field :url %>
  <%= f.submit "Create Link"  %>
<% end %>

<h2>Your links</h2>
<% @links.each do |link| %>
  <%= link.created_at %>
  <%= link.title %>
  <%= link.url %>
  <%= link.read %>
<% end %>